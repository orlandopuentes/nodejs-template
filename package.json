{
    "name": "node-template",
    "version": "1.0.0",
    "type": "module",
    "description": "Plantilla base para los proyectos desarrollados en el curso de Node",
    "scripts": {
        "dev": "nodemon src/index.js",
        "start": "node src/index.js",
        "lint": "eslint src/**/*.js --fix",
        "prettier": "prettier --write .",
        "prepare": "husky install"
    },
    "author": {
        "name": "Orlando Puentes",
        "email": "orlandopuentes@gmail.com"
    },
    "license": "ISC",
    "devDependencies": {
        "eslint": "8.24.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-config-standard": "17.0.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-n": "15.3.0",
        "eslint-plugin-promise": "6.0.1",
        "husky": "8.0.1",
        "lint-staged": "13.0.3",
        "nodemon": "2.0.20",
        "prettier": "2.7.1"
    },
    "imports": {
        "#Lib/*": "./src/lib/*"
    },
    "lint-staged": {
        "*.js": "eslint --fix",
        "*.{js,md}": "prettier --write"
    }
}